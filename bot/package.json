{
  "name": "nord-telegram-bot",
  "version": "1.0.0",
  "type": "module",
  "description": "Telegram bot for Nord Clean Business",
  "main": "bot-runner.js",
  "scripts": {
    "build": "npx tsc ../src/lib/telegram-bot.ts --outDir ./lib --target es2020 --module es2020 --moduleResolution node",
    "start": "npm run build && node bot-runner.js",
    "dev": "npm run build && node --watch bot-runner.js"
  },
  "dependencies": {
    "dotenv": "^17.2.3",
    "grammy": "^1.38.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
